extends layout

block content
  h2 Advanced Gerador de Pedidos v0.1
  div
    form(action="/enviar", method="post")
      label Nome: 
      input.form-control(type="text", name="nome", required="required")
      .invalid-feedback
        |Preencha o nome
      br
      for op in Object.entries(opcoes)
        label(for=`check-opcoes-${op[0]}` class="opcao")
          input(id=`check-opcoes-${op[0]}` type="checkbox", name="opcoes", value=`${opcoes[op[0]]}`)
          span(style="padding-left: 10px")
            |#{opcoes[op[0]]}
      br
      label Observação: 
      input.form-control(type="text", name="observacao", placeholder="Tem alguma observação sobre o seu pedido? Insira aqui.")
      br
      input.btn.btn-primary(type="submit")
  .pedidos-submetidos
    h3 Pedidos enviados:
    p
      if pedidos && pedidos.length > 0
        for pedido in pedidos
          |#{pedido.nome}
          |: #{pedido.opcoes}
          if pedido.observacao
            |(Obs.:#{pedido.observacao})
          br
        
      else
        h4 nenhum pedido submetido
      

  
