extends layout

block content
  .formCardapio
    form(method="post", action="/inserirCardapio")
      textarea.form-control(name="cardapio", cols="30", rows="10")
      br
      input.btn.btn-primary(type="submit", value="Inserir Cardápio", required="required")
    if opcoes && opcoes.length > 1
      div
        |Opções atuais: #{opcoes}

  .pedidos
    if pedidos && pedidos.length > 0 
      h2 pedidos: 
      .table.table-responsive
        table
          tbody
            for pedido in pedidos
              tr
                td
                  |#{pedido.nome}
                td
                  | #{pedido.opcoes} 
                  if pedido.observacao
                    | (Obs.: #{pedido.observacao})
                td
                  a.btn.btn-danger(href=`/remover/${pedido.nome}`) Remover
            br
      a(href="/gerarPedido") Gerar Pedido
    else
      h2 nenhum pedido submetido